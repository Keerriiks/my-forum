<%= form_for @forum_thread do |f| %>
    <div class="form-group">
      <%= f.text_field :subject, placeholder: "Тема", class: "form-control" %>
    </div>

    <div class="form-group">
      <%= f.select :forum_category_id, options_for_select(ForumCategory.all.map { |c| [c.name, c.id] }, params[:forum_category_id]), { prompt: 'Выберете категорию' }, {class: "form-control"}%>
    </div>

    <%= f.fields_for :forum_posts do |p| %>
      <div class="form-group">
        <%= p.text_area :body, placeholder: "Содержание", rows: 10, class: "form-control" %>
      </div>
    <% end %>
  
    <div class="form-group">
      <%= f.submit "Создать тему", class: "btn btn-primary" %>
    </div>
<% end %>