<div class="container">
  <h1><%= @forum_thread.subject %></h1>
  <p class="text-muted">Категория: <%= ForumCategory.find(@forum_thread.forum_category_id).name%></p>
  <p class="text-muted">Кем создана тема: <%= @forum_thread.user.nil? ? "удалённым пользователем"  : @forum_thread.user.nickname %></p>
  <%= render @forum_thread.forum_posts %>
  <hr />
  <%= render partial: "forum_posts/form" %>
</div>