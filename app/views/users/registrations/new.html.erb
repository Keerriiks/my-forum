<h2>Регистрация</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "users/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label "Никнейм" %><br />
    <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label "Имя" %><br />
    <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label "Фамилия" %><br />
    <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
  </div>

  <div class="field">
    <%= f.label "Пароль" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> символов минимум)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
  </div>

  <div class="field">
    <%= f.label "Повторите пароль" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control"  %>
  </div>
  <br>
  <div class="actions">
    <%= f.submit "Зарегистрироваться", class: "btn btn-primary" %>
  </div>
<% end %>

<%= render "users/shared/links" %>
